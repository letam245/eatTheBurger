<h1>Let's have some Burgers</h1>

<h2>Available Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        <h5 class="text-primary">{{this.id}}. {{this.burger_name}}</h5>

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour!</button>
        </form>
        <br>
        <form action="/{{this.id}}?_method=DELETE" method="POST">
            {{!-- <input type="hidden" name="id" value="{{this.id}}"> --}}
            <button type="submit">Delete Burger!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Ordered Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        <h5 class="text-muted">{{this.id}}. {{this.burger_name}}</h5>

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Switch to Different Burger</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="bur">Burger Name:</label>
    <input type="text" id="bur" name="burger_name">
  </div>

  <div class="form-group">
    <label for="Dev">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Eaten Yet!
  </div>

  <button type="submit">Add Burger</button>
</form>