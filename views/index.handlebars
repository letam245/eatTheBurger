<div class="row">

  <div class="col-sm-4">
    {{!--
    <h1>Let's have some Burgers</h1> --}}
    <img src="/assets/img/burgerheader.jpg" alt="burger" class="img-responsive">
  </div>

  <div class="col-sm-8">
    <div class="row">
      <div class="col-sm-6">
        <h1>AVAILABLE BURGERS!</h1>

        <ul>
          {{#each burgers}} {{#unless this.devoured}}
          <li class="text-center">
            <h4>{{this.burger_name}}</h4>
            <div class="row">
              <div class="col-xs-2"></div>
              <div class="col-xs-4">
                <form action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  <button class="btn btn-warning btn-sm" type="submit">Devour Burger!</button>
                </form>
              </div>

              <div class="col-xs-4">
                <form action="/{{this.id}}?_method=DELETE" method="POST">
                  {{!-- <input type="hidden" name="id" value="{{this.id}}"> --}}
                  <button class="btn btn-warning btn-sm" type="submit">Delete Burger!</button>
                </form>
              </div>
            </div>

            <div class="col-xs-2"></div>
          </li>
          {{/unless}} {{/each}}
        </ul>
      </div>

      <div class="col-sm-6">
        <h1>Ordered Burgers</h1>

        <ul>
          {{#each burgers}} {{#if this.devoured}}
          <li class="text-center">
            <h4>{{this.burger_name}}</h4>

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
              <button class="btn btn-warning btn-sm" type="submit">Switch to Different Burger</button>
            </form>
          </li>
          {{/if}} {{/each}}
        </ul>

      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-sm-12">
        <h1 class="text-center">Add a Burger</h1>
        <form class="create-update-form" action="/" method="POST">
          <div class="row">
            <div class="col-sm-5 form-group">

              <label for="bur">Burger Name:</label>
              <input type="text" id="bur" name="burger_name">

            </div>

            <div class="col-sm-7 form-group">
              <div class="row">
                  <div class="col-sm-4">
                    <label for="Dev">Devoured?</label>
                  </div>
                  <div class="col-sm-4">
                    <input type="radio" name="devoured" value="1" checked><span class="radioText">Devoured!</span>
                  </div>
                  <div class="col-sm-4">
                     <input type="radio" name="devoured" value="0"><span class="radioText">Not Eaten Yet!</span>
                  </div>
                </div>
                
               
              
            </div>

          </div>
          <div class="row">
            <div class="col-sm-12 addBurger">
                <button class="btn btn-warning btn-sm" type="submit">Add Burger</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    {{!-- closing div container --}}
  </div>